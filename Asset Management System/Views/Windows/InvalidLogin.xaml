<CSClasses:CSWindow x:Class="Asset_Management_System.Views.Windows.InvalidLogin"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:CSClasses="clr-namespace:CodeSphere.CSClasses;assembly=CodeSphere" 
                    Width="300"
                    Height="150" IsCloseButtonEnabled="True" 
                   WindowStartupLocation="CenterScreen"
                   IsMaxRestoreButtonEnabled="False" 
                   IsMinButtonEnabled="False" 
                   ResizeMode="NoResize" BorderThickness="2"                 
                   >

    <catel:StackGrid VerticalAlignment="Center">
        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </catel:StackGrid.RowDefinitions>
        <catel:StackGrid.ColumnDefinitions>           
            <ColumnDefinition Width="1*"/>
        </catel:StackGrid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center"  Text="Invalid Username/Password. Please try again." Margin="10"/>
        <catel:EmptyRow Height="30"/>
        <Button  Width="100" Height="30" Content="OK" Command="{Binding CommandClose}"/>
       
    </catel:StackGrid>
    
</CSClasses:CSWindow>
